@{
    Layout = null;
    ViewData["Title"] = "LogIn Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            font-family: "Ink Free";
        }

        .popover {
            max-width: 100%; /* max width of the popover (depending on the container!) */
        }
    </style>
</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-md-4 col-sm-8 mx-auto my-auto bg-white px-5 py-4 rounded-sm"
                 style="box-shadow: inset 0 0 .3rem lightgray">
                <form name="userInfo">
                    <div class="form-row">
                        <h1 class="text-center mx-auto py-3">Welcome!</h1>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Email</label>
                            <input type="email" name="email" class="form-control" id="inputEmail4" autocomplete="off" placeholder="Email" data-trigger="focus" data-toggle="popover" data-placement="left" data-content="请输入邮箱">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="user_phone">Phone</label>
                            <input type="text" class="form-control" name="phone" id="user_phone" autocomplete="off"
                                   placeholder="Enter your phone number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username">UserName</label>
                        <input type="text" name="username" class="form-control" id="username" autocomplete="off"
                               placeholder="Enter your username" />
                    </div>

                    <div class="form-group">
                        <label for="user_password">Password</label>
                        <input type="password" name="password" class="form-control" id="user_password" autocomplete="off"
                               placeholder="Enter your password" />
                    </div>

                    <div class="form_group mb-2">
                        <label for="confirm_user_password">Confirm Password</label>
                        <input type="password" name="passwordAgain" class="form-control" id="confirm_user_password" autocomplete="off"
                               placeholder="Enter your password again" />
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck" autocomplete="off">
                            <label class="form-check-label" for="gridCheck">
                                Check me out
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-50 mx-auto w-100">Sign in</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>

    <script>
        $(function () {

$('[data-toggle="popover"]').popover({
    container: 'body'
});


            function CheckPassword() {
                var passwordOne = $("input[name='password']").val().trim();
                var passwordTwo = $("input[name='passwordAgain']").val().trim();
                if (passwordOne !== passwordTwo) {
                    return false;
                }
                else {
                   return true;
                }
            }

            $("input[name='passwordAgain']").bind('input propertychange', function () {
              var checkResult=CheckPassword();
              if(!checkResult)
                    $("button").attr("disabled","disabled");
              else
                    $("button").removeAttr("disabled");
            })

            @* 在这里点击时既会触发按钮的点击事件，又会触发input元素的blur事件，经过测试二者会先触发blur事件 *@
            $("button").on("click", function () {
                CheckPassword();
                var formData=$("form").serializeArray();
                var params=new Object();
              $.each(formData,function(){
                  params[this.name]=this.value;
              });

                $.ajax({
                    url: '@Url.Action("CreateUser", "Home")',
                    type: 'POST',
                    async: false,
                    data: params,
                    timeout: 5000,
                    dataType: 'json',    //json/xml/html/script/jsonp/text
                    success: function (data, textStatus, jqXHR) {
                        debugger;
                        if(data.stateCode===0.1)
                        {

                        }
                        else if(data.stateCode===0.2)
                        {

                        }
                        else{

                        }
                    },
                    error: function (xhr, textStatus) {
                        console.log('错误', xhr.responseText);
                        console.log(xhr);
                        console.log(textStatus);
                    }
                });
            })
        })
    </script>
</body>

</html>