@{
    ViewData["Title"] = "个人首页";
}
<style>

    /*覆盖bootstrap默认的样式*/
    .nav-link {
        color: #495057;
    }

        .nav-link.active {
            color: #007bff !important;
        }
</style>

<div class="row my-4">
    <div class="col-3"></div>
    <div class="col-9 border-left">
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active custom-tab-font-size" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">文章</a>
                        <a class="nav-item nav-link custom-tab-font-size" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">评论</a>
                        <a class="nav-item nav-link custom-tab-font-size" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">关注</a>
                        <a class="nav-item nav-link custom-tab-font-size" id="nav-nav-setting-tab" data-toggle="tab" href="#nav-setting" role="tab" aria-controls="nav-setting" aria-selected="false">设置</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active mt-3" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <table class="table table-striped mt-2">
                            <thead>
                                <tr>
                                    <th scope="col" class="border-top-0 text-secondary font-weight-normal custom-tab-font-size">编号</th>
                                    <th scope="col" class="border-top-0 text-secondary font-weight-normal custom-tab-font-size">文章名称</th>
                                    <th scope="col" class="border-top-0 text-secondary font-weight-normal custom-tab-font-size">浏览量</th>
                                    <th scope="col" class="border-top-0 text-secondary font-weight-normal custom-tab-font-size">发布时间</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row" class="text-secondary font-weight-light custom-table-font-size">1</th>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">为什么不能作弊</td>
                                    <td class="text-secondary font-weight-light custom-table-font-size">Otto</td>
                                    <td class="text-secondary font-weight-light custom-table-font-size">mdo</td>
                                </tr>
                                <tr>
                                    <th class="text-secondary font-weight-lighter custom-table-font-size" scope="row">2</th>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">Jacob</td>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">Thornton</td>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">fat</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="text-secondary font-weight-lighter custom-table-font-size">3</th>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">Larry</td>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">the Bird</td>
                                    <td class="text-secondary font-weight-lighter custom-table-font-size">twitter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
                    <div class="tab-pane fade" id="nav-setting" role="tabpanel" aria-labelledby="nav-setting-tab">
                        <form class="w-75 mt-4 p-3 rounded-sm">
                            <div class="form-group">
                                <label for="email" class="small text-secondary">邮箱地址</label>
                                <input type="email" class="form-control custom-input-font-size" id="email" placeholder="name@example.com">
                            </div>
                            <div class="form-group">
                                <label for="phone" class="small text-secondary">手机号码</label>
                                <input type="text" class="form-control custom-input-font-size" id="phone" placeholder="手机号码">
                            </div>
                            <div class="form-group">
                                <label for="username" class="small text-secondary">用户名</label>
                                <input type="text" class="form-control custom-input-font-size" id="username" placeholder="用户名">
                            </div>
                            <div class="form-group">
                                <label for="introduction" class="small text-secondary">个人简介</label>
                                <textarea class="form-control custom-input-font-size" id="introduction" rows="3" placeholder="简单介绍一下自己吧……"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-sm btn-primary rounded-lg">提&nbsp;交</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
