    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            $(".nav-item").click(function () {
                $(this).siblings().children(".nav-link").removeClass("active");
                $(this).children(".nav-link").addClass("active");
            });

            // 动态调整搜索框宽度
            $(".form-control.mr-1").on("focus",
                function () {
                    $(this).animate({
                        "width": "20rem"
                    })
                });

            $(".form-control.mr-1").on("blur", function () {
                $(this).animate({
                    "width": "10rem"
                })
            });

            // 在小屏幕下给列表卡添加背景
            var documentWidth = $(window).width();
            if (documentWidth <= 414) {
                $(".container-fluid .card-body").addClass("bg-light mb-2 rounded");
                $(".pagination").parent().addClass("mt-2");
                $(".carousel-indicators").css("display", "none");
                $(".card-body").removeClass("mb-2");
            }
            else {
                $(".container-fluid .card-body").removeClass("bg-light mb-2 rounded");
            }
        })
    </script>
